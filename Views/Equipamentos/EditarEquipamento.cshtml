@model ConfiguradorDeComponents.Models.Equipamentos

<h4>Equipamentos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarEquipamento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDeSerie" class="control-label"></label>
                <input asp-for="NumeroDeSerie" class="form-control" />
                <span asp-validation-for="NumeroDeSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="IdDoTipoDeEquipamento">
                    <option value=1>Tensão</option>
                    <option value=2>Corrente</option>
                    <option value=3>Óleo</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
